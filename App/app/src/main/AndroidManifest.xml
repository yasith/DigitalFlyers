<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rambutan.digitalflyers" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Leaf_green_ab" >
        <activity
            android:name="com.rambutan.digitalflyers.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rambutan.digitalflyers.ShoppingList"
            android:label="@string/title_activity_shopping_list"
            android:parentActivityName="com.rambutan.digitalflyers.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

    <meta-data
        android:name="AA_DB_NAME"
        android:value="DigitalFlyers.db" />

</manifest>
