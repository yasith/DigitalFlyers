<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/border"
    android:layout_width="@dimen/deal_item_width"
    android:layout_height="@dimen/deal_item_height"
    android:padding="@dimen/deal_item_padding"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/bg_card">

        <ImageView
            android:id="@+id/item_image"
            android:layout_gravity="center"
            style="@style/deal_image" />

        <TextView
            android:id="@+id/item_name"
            android:singleLine="true"
            style="@style/deal_name" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_store"
            style="@style/deal_text"
            android:layout_gravity="left"
            />

        <TextView
            android:id="@+id/item_price"
            style="@style/deal_text"
            android:layout_gravity="right"
            />
        </FrameLayout>


        <!--<TextView
            android:id="@+id/item_discount"
            style="@style/deal_text" />
-->
    </LinearLayout>

</FrameLayout>