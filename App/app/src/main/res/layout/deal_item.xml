<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/border"
    android:layout_width="@dimen/deal_item_width"
    android:layout_height="@dimen/deal_item_height"
    android:orientation="vertical"
    android:padding="@dimen/deal_item_padding"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_card" >

        <com.parse.ParseImageView
            android:id="@+id/item_image"
            style="@style/deal_image" />


        <TextView
            android:id="@+id/item_name"
            android:maxLines="2"
            style="@style/deal_name" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/item_store"
                style="@style/deal_text" />

            <TextView
                android:id="@+id/item_price"
                style="@style/deal_text" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_discount"
            style="@style/deal_text" />

    </LinearLayout>

</FrameLayout>